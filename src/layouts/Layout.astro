---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <title>{title}</title>
</head>
  <body class="bg-gray-50 flex flex-col min-h-full font-sans">
    <Header currentPage={Astro.url.pathname} />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />

<div id="gallery-lightbox" class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-80" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  
  <div class="relative flex items-center justify-center w-full h-full">

    <div class="relative text-center p-4">
      <img id="lightbox-image" src="" alt="Vista ampliada del proyecto" class="max-h-[80vh] max-w-[80vw] object-contain rounded-lg shadow-xl">
      <p id="lightbox-title" class="text-white text-lg font-bold mt-4"></p>
    </div>
    
    <button id="lightbox-close" class="absolute top-4 right-4 z-10 h-10 w-10 rounded-full bg-white/20 text-white flex items-center justify-center hover:bg-white/40">
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
    </button>
    
    <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 z-10 h-12 w-12 rounded-full bg-white/20 text-white flex items-center justify-center hover:bg-white/40">
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
    </button>
    
    <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 z-10 h-12 w-12 rounded-full bg-white/20 text-white flex items-center justify-center hover:bg-white/40">
      <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
    </button>

  </div>
</div>

</body>
</html>